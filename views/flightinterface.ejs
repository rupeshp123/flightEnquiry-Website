<style>
    .maincontainer {

        background: #0419a0;
        width: 100vw;
        height: 100vh;
        display: flex;
        justify-content: center;
        align-items: center;
    }

    .box {
        width: 50%;
        height: auto;
        background: #fff;
        border-radius: 10px;
        padding: 10px;

    }



    .heading {
        font-size: 20px;
        letter-spacing: 1px;
        font-weight: bold;
        color: #0419a0;
        margin-bottom: 10px;

    }

    .buttonstyle {

        width: 100%;
    }

    .daysstyle {
        justify-content: space-evenly;
        display: flex;
        flex-direction: row;
        margin-top: 10px;
    }
</style>

<html>

<head>
    <title>FLIGHT INTERFACE</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/css/bootstrap.min.css" rel="stylesheet"
        integrity="sha384-GLhlTQ8iRABdZLl6O3oVMWSktQOp6b7In1Zl3/Jr59b6EGGoI1aFkw7cmDA6j6gD" crossorigin="anonymous">
    <script src="https://code.jquery.com/jquery-3.6.3.min.js"></script>
    <script src="/javascripts/project.js"></script>
</head>

<div class="maincontainer">
    <div class="box">
        <div class="heading">
         <a href="flight/displayallflights">   <img src="/images/display.png" width="30"></a>

            <img src="/images/flighticon.png" width="30">
            Flight Interface
        </div>
        <form action="/flight/flightsubmit" method="post" enctype="multipart/form-data" class="row g-3" ">
            <div class=" col-md-6">
            <label for="flightname" class="form-label"><b>Flight Name</b></label>
            <input type="text" class="form-control" name="flightname" id=" flightname">
    </div>

    <div class="col-md-6">
        <label for="flighttype" class="form-label"><b>Flight type</b></label>
        <select id="flighttype " name="flighttype" class="form-select">
            <option>choose type</option>
            <option>business</option>
            <option>economy</option>
            <option>economy/business</option>

        </select>
    </div>
    <div class="col-md-4">
        <label for="noofseats" class="form-label"><b>Total Seats</b></label>
        <input type="text" class="form-control" name="noofseats" id=" noofseats">
    </div>

    <div class="col-md-8 ">
        <label for="days" class="form-label"><b>Select Flight Days</b></label>

        <div class="daysstyle">
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="days" value="mon" id="days">
                <label class="form-check-label" for="days">
                    mon
                </label>
            </div>

            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="days" value="tue" id="days">
                <label class="form-check-label" for="days">
                    tue
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="days" value="wed" id="days">
                <label class="form-check-label" for="days">
                    wed
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="days" value="thur" id="days">
                <label class="form-check-label" for="days">
                    thur
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="days" value="fri" id="days">
                <label class="form-check-label" for="days">
                    fri
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="days" value="sat" id="days">
                <label class="form-check-label" for="days">
                    sat
                </label>
            </div>
            <div class="form-check">
                <input class="form-check-input" type="checkbox" name="days" value="sun" id="days">
                <label class="form-check-label" for="days">
                    sun
                </label>
            </div>
        </div>
    </div>
    <div class="col-md-3">
        <label for="sourcecity" class="form-label"><b>Source City</b></label>
        <select id="sourcecity" name="source" class="form-select">
            <option selected>choose source city</option>

        </select>
    </div>
    <div class="col-md-3">
        <label for="departure" class="form-label"><b>Departure Time</b></label>
        <input type="time" class="form-control" name="departure" id=" departure">
    </div>
    <div class="col-md-3">
        <label for="sourcecity" class="form-label"><b>Destination City</b></label>
        <select id="destinationcity" name="destination" class="form-select">
            <option selected>choose destination city</option>

        </select>
    </div>
    <div class="col-md-3">
        <label for="arrival" class="form-label"><b>Arrival Time</b></label>
        <input type="time" class="form-control" name="arrival" id=" arrival">
    </div>
    <div class="col-md-6">
        <label for="company" class="form-label"><b>Company</b></label>
        <input type="text" class="form-control" name="company" id=" company">
    </div>
    <div class="col-md-6">
        <label for="logo" class="form-label"><b>Logo</b></label>
        <input type="file" class="form-control" name="logo" id=" logo">
    </div>


    <div class="col-md-6 ">
        <button type="submit" class="btn btn-secondary buttonstyle">Submit</button>
    </div>
    <div class="col-md-6 ">
        <button type="reset" class="btn btn-secondary buttonstyle">Reset</button>

    </div>
    <div class="col-md-12" style="display:flex;justify-content:center;padding:5px;font-weight:bold">
        <%=message%>
    </div>




    </form>
</div>

</div>


<script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0-alpha1/dist/js/bootstrap.bundle.min.js"
    integrity="sha384-w76AqPfDkMBDXo30jS1Sgez6pr3x5MlQ1ZAGC+nuZB+EYdgRZgiwxhTBTkF7CXvN"
    crossorigin="anonymous"></script>

</html>